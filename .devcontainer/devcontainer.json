{
  "name": "ClaudeMonitor Dev Container",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },
  "image": null,
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  "extensions": [
    "rust-lang.rust-analyzer",
    "ms-python.python",
    "esbenp.prettier-vscode",
    "dbaeumer.vscode-eslint",
    "ms-vscode.vscode-typescript-next"
  ],
  "postCreateCommand": "rustup default 1.70.0 || true && rustup component add clippy rustfmt || true && npm install -g npm@latest || true",
  "forwardPorts": [],
  "remoteUser": "vscode",
  "customizations": {
    "vscode": {
      "settings": {},
      "extensions": [
        "rust-lang.rust-analyzer",
        "ms-python.python"
      ]
    }
  }
}